@model FormASP.NET_Core.Models.UserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <form asp-controller="Home" asp asp-action="Register">
        Id : <input asp-for="User.Id" />
        Name : <input asp-for="User.Name" />
        Surname : <input asp-for="User.Surname" />
        Age : <input asp-for="User.Age" />
        Images : <input asp-for="User.Surname" />
        <input type="file" asp-for="User.ImagePath" />
        <button type="submit">Add</button>
    </form>
</body>
</html>
